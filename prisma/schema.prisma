generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Anime {
  id     Int
  userId String
  name   String

  @@id([id, userId]) // Composite primary key using both id and userId
}
